{% extends 'base.html.twig' %}
{% block body %} 

<table style="font-size: 20px;" id="studentData" class="table">
    <tr>
        <th>ID</th>
        <th>Name</th>
    </tr>
    <tr>
        <th>{{ student.id }}</th>
        <th>{{ student.name }}</th>
    </tr>
    <div class="column">
            <div class="row">
                <table id="table2" class="table column10">
                    <tr>
                        <th>
                            <h2>Student</h2>
                        </th>
                    </tr>
                    {% for mark in marks %}
                        <tr>
                            <th>{{ mark.markValue }}</th>
                        </tr>
                    {% endfor %}
                </table>
                <table id="table3" class="table column20">
                    <tr>
                        <th>
                            <h2>Class</h2>
                        </th>
                    </tr>
                    {% for class in classes %}
                        <tr>
                            <th>{{ class.name }}</th>
                        </tr>
                    {% endfor %}
                </table>
            </div>
</table>
{% for mark in allMarks %}
        {{ mark.markValue }}.
{% endblock %}